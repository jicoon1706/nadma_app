<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main"
    android:padding="10dp"
    android:elevation="10dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white">

    <!-- Container for three TextViews -->
    <LinearLayout
        android:id="@+id/leftTexts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <!-- First TextView -->
        <TextView
            android:id="@+id/tvDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Second TextView -->
        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDepartment"
            android:layout_marginTop="8dp"
            android:text="Department ID"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <!-- Third TextView -->
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvId"
            android:layout_marginTop="8dp"
            android:text="Address"
            android:textSize="14sp"
            android:textColor="@color/black" />

    </LinearLayout>

    <!-- Container for two Buttons -->
    <LinearLayout
        android:id="@+id/rightButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <!-- First Button (Update) -->
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAddress"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:text="Update"
            android:backgroundTint="@color/Main_Background"
            android:textColor="@color/white" />

        <!-- Second Button -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btnUpdate"
            android:layout_below="@id/tvAddress"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="Delete"
            android:backgroundTint="@color/red"
            android:textColor="@color/white" />

        <!-- Third Button -->
        <Button
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btnUpdate"
            android:layout_below="@id/tvAddress"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="Call"
            android:onClick="emergency"
            android:backgroundTint="@color/call"
            android:textColor="@color/white" />


    </LinearLayout>
</RelativeLayout>
